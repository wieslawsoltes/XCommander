<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="using:XCommander.Controls"
        xmlns:vm="using:XCommander.ViewModels"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="XCommander.Views.FileViewerDialog"
        x:DataType="vm:FileViewerViewModel"
        Title="{Binding FilePath, StringFormat='Viewer - {0}'}"
        Width="1000"
        Height="750"
        WindowStartupLocation="CenterOwner">
    
    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <controls:TcBevelPanel Grid.Row="0" Padding="6,4">
            <Grid ColumnDefinitions="Auto,Auto,Auto,*,Auto">
                <!-- View Mode -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4">
                    <TextBlock Text="View:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <RadioButton GroupName="ViewMode" 
                                 Content="Text" 
                                 IsChecked="{Binding ViewMode, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:ViewMode.Text}}"
                                 Command="{Binding SwitchToTextCommand}"/>
                    <RadioButton GroupName="ViewMode" 
                                 Content="Hex" 
                                 IsChecked="{Binding ViewMode, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:ViewMode.Hex}}"
                                 Command="{Binding SwitchToHexCommand}"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" Text="|" VerticalAlignment="Center" Foreground="{DynamicResource TcMutedTextBrush}" Margin="8,0"/>
                
                <!-- Encoding -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4"
                            IsVisible="{Binding !IsImage}">
                    <TextBlock Text="Encoding:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding AvailableEncodings}"
                              SelectedItem="UTF-8"
                              SelectionChanged="OnEncodingChanged"
                              Width="120"/>
                    <CheckBox IsChecked="{Binding WordWrap}" 
                              Content="Word Wrap" 
                              Margin="12,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Search -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="4">
                    <TextBox Text="{Binding SearchText}" 
                             Watermark="Search..."
                             Width="200"
                             VerticalContentAlignment="Center"/>
                    <Button Content="Prev" 
                            Command="{Binding FindPreviousCommand}"
                            ToolTip.Tip="Find Previous"
                            Padding="8,4"/>
                    <Button Content="Next" 
                            Command="{Binding FindNextCommand}"
                            ToolTip.Tip="Find Next"
                            Padding="8,4"/>
                    <TextBlock VerticalAlignment="Center" 
                               Margin="8,0,0,0"
                               IsVisible="{Binding TotalMatches}">
                        <Run Text="{Binding CurrentMatch}"/>
                        <Run Text="/"/>
                        <Run Text="{Binding TotalMatches}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </controls:TcBevelPanel>
        
        <!-- Content Area -->
        <Grid Grid.Row="1" Margin="0,6,0,0">
            <!-- Loading Overlay -->
            <Border IsVisible="{Binding IsLoading}"
                    Background="#80000000"
                    ZIndex="100">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200"/>
                    <TextBlock Text="Loading file..." 
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"
                               Foreground="White"/>
                </StackPanel>
            </Border>
            
            <!-- Text View -->
            <controls:TcInsetPanel IsVisible="{Binding !IsImage}" Padding="0">
                <TextBox Text="{Binding Content}"
                         IsReadOnly="True"
                         FontFamily="{DynamicResource MonoFontFamily}"
                         FontSize="12"
                         AcceptsReturn="True"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         BorderThickness="0"
                         Margin="0"
                         Name="ContentTextBox"/>
            </controls:TcInsetPanel>
            
            <!-- Image View -->
            <controls:TcInsetPanel IsVisible="{Binding IsImage}" Padding="0">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <Image Source="{Binding ImagePath}"
                           Stretch="Uniform"
                           MaxWidth="2000"
                           MaxHeight="2000"/>
                </ScrollViewer>
            </controls:TcInsetPanel>
        </Grid>
        
        <!-- Status Bar -->
        <controls:TcBevelPanel Grid.Row="2" Padding="6,4" Margin="0,6,0,0">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusText}"
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding FilePath}"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TcMutedTextBrush}"
                           Margin="0,0,20,0"/>
                <Button Grid.Column="2" 
                        Content="Close" 
                        Click="OnCloseClick"
                        Padding="10,4"/>
            </Grid>
        </controls:TcBevelPanel>
    </Grid>
    
    <Window.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding $parent[Window].Close}"/>
        <KeyBinding Gesture="F3" Command="{Binding FindNextCommand}"/>
        <KeyBinding Gesture="Shift+F3" Command="{Binding FindPreviousCommand}"/>
    </Window.KeyBindings>
</Window>
