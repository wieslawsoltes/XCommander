<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="using:XCommander.Controls"
        xmlns:vm="using:XCommander.ViewModels"
        xmlns:converters="using:XCommander.Converters"
        mc:Ignorable="d" d:DesignWidth="750" d:DesignHeight="550"
        x:Class="XCommander.Views.Dialogs.FileColoringSettingsDialog"
        x:DataType="vm:FileColoringSettingsViewModel"
        Title="File Coloring Settings"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <DataTemplate x:Key="FileColorRuleTemplate"
                      x:DataType="vm:FileColorRuleViewModel">
            <Border Padding="6" Margin="2"
                    Opacity="{Binding IsEnabled, Converter={x:Static converters:BoolToOpacityConverter.Instance}}">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Color Preview -->
                    <Border Grid.Column="0"
                            Width="24" Height="24"
                            Margin="0,0,10,0">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding ForegroundColor}"/>
                        </Border.Background>
                    </Border>
                    
                    <!-- Name & Pattern -->
                    <StackPanel Grid.Column="1" Spacing="2">
                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="{Binding Criteria}" FontSize="11" Opacity="0.6"/>
                            <TextBlock Text="{Binding Pattern}" FontSize="11" Opacity="0.6"
                                       TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Status -->
                    <TextBlock Grid.Column="2"
                               Text="â—"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="{Binding IsEnabled, Converter={x:Static converters:BoolToStatusBrushConverter.Instance}}"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="10">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="File Coloring Rules" FontSize="14" FontWeight="Bold"/>
            <TextBlock Text="Customize how files are displayed based on extension, attributes, size, or custom patterns."
                       Foreground="{DynamicResource TcMutedTextBrush}" Margin="0,2,0,0"/>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,300" ColumnSpacing="8">
            <!-- Rules List -->
            <controls:TcInsetPanel Grid.Column="0" Padding="0">
                <Grid RowDefinitions="Auto,*">
                    <!-- List Toolbar -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="5" Margin="8">
                        <Button Content="Add" Command="{Binding AddRuleCommand}" Padding="8,4"/>
                        <Button Content="Delete" Command="{Binding DeleteRuleCommand}" 
                                IsEnabled="{Binding SelectedRule, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Padding="8,4"/>
                        <Button Content="Up" Command="{Binding MoveUpCommand}" 
                                IsEnabled="{Binding SelectedRule, Converter={x:Static ObjectConverters.IsNotNull}}"
                                ToolTip.Tip="Move Up" Padding="8,4"/>
                        <Button Content="Down" Command="{Binding MoveDownCommand}" 
                                IsEnabled="{Binding SelectedRule, Converter={x:Static ObjectConverters.IsNotNull}}"
                                ToolTip.Tip="Move Down" Padding="8,4"/>
                        <TextBlock Text="|" VerticalAlignment="Center" Foreground="{DynamicResource TcMutedTextBrush}" Margin="5,0"/>
                        <ComboBox ItemsSource="{Binding Presets}" 
                                  SelectedItem="{Binding SelectedPreset}"
                                  Width="150"
                                  PlaceholderText="Load Preset..."/>
                        <Button Content="Load" 
                                Command="{Binding LoadPresetCommand}"
                                CommandParameter="{Binding SelectedPreset}"
                                Padding="8,4"/>
                    </StackPanel>
                    
                    <!-- Rules -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Rules}"
                              SelectedItem="{Binding SelectedRule}"
                              ColumnDefinitionsSource="{Binding RulesColumnDefinitions}"
                              FilteringModel="{Binding RulesFilteringModel}"
                              SortingModel="{Binding RulesSortingModel}"
                              SearchModel="{Binding RulesSearchModel}"
                              Margin="5"
                              CanUserResizeColumns="True"
                              CanUserReorderColumns="False"
                              CanUserSortColumns="True"
                              HeadersVisibility="None"
                              GridLinesVisibility="None"
                              BorderThickness="0"
                              IsReadOnly="True">
                        <DataGrid.FastPathOptions>
                            <DataGridFastPathOptions UseAccessorsOnly="True"
                                                     ThrowOnMissingAccessor="True" />
                        </DataGrid.FastPathOptions>
                    </DataGrid>
                </Grid>
            </controls:TcInsetPanel>
            
            <!-- Edit Panel -->
            <controls:TcInsetPanel Grid.Column="1"
                                   Padding="10"
                                   IsEnabled="{Binding IsEditing}">
                <ScrollViewer>
                    <StackPanel Spacing="12">
                        <TextBlock Text="Edit Rule" FontWeight="SemiBold" FontSize="13"/>
                        
                        <!-- Name -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Name" FontSize="11" Opacity="0.7"/>
                            <TextBox Text="{Binding EditName}"/>
                        </StackPanel>
                        
                        <!-- Criteria -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Match By" FontSize="11" Opacity="0.7"/>
                            <ComboBox ItemsSource="{Binding CriteriaOptions}" 
                                      SelectedItem="{Binding EditCriteria}"
                                      HorizontalAlignment="Stretch"/>
                        </StackPanel>
                        
                        <!-- Pattern -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Pattern" FontSize="11" Opacity="0.7"/>
                            <TextBox Text="{Binding EditPattern}" 
                                     Watermark="e.g., exe;com;bat or regex"/>
                        </StackPanel>
                        
                        <!-- Foreground Color -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Foreground Color" FontSize="11" Opacity="0.7"/>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBox Grid.Column="0" Text="{Binding EditForeground}"/>
                                <Border Grid.Column="1" Width="30" Height="30" Margin="5,0,0,0">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding EditForeground}"/>
                                    </Border.Background>
                                </Border>
                            </Grid>
                            <ItemsControl ItemsSource="{Binding CommonColors}" Margin="0,5,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Width="20" Height="20" Margin="2" Padding="0"
                                                Click="OnColorClick" Tag="{Binding}">
                                            <Button.Background>
                                                <SolidColorBrush Color="{Binding}"/>
                                            </Button.Background>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                        
                        <!-- Background Color (optional) -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Background Color (optional)" FontSize="11" Opacity="0.7"/>
                            <TextBox Text="{Binding EditBackground}" Watermark="Leave empty for default"/>
                        </StackPanel>
                        
                        <!-- Style Options -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Text Style" FontSize="11" Opacity="0.7"/>
                            <StackPanel Orientation="Horizontal" Spacing="15">
                                <CheckBox IsChecked="{Binding EditBold}" Content="Bold"/>
                                <CheckBox IsChecked="{Binding EditItalic}" Content="Italic"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Preview -->
                        <StackPanel Spacing="4" Margin="0,10,0,0">
                            <TextBlock Text="Preview" FontSize="11" Opacity="0.7"/>
                            <Border Background="{DynamicResource TcWindowBackgroundBrush}" 
                                    Padding="8">
                                <TextBlock Text="Sample File.txt" FontSize="14">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="{Binding EditForeground}"/>
                                    </TextBlock.Foreground>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                        
                        <!-- Apply Button -->
                        <Button Content="Apply Changes" 
                                Command="{Binding ApplyChangesCommand}"
                                HorizontalAlignment="Stretch"
                                Padding="10,6"
                                Margin="0,8,0,0"/>
                        
                        <!-- Toggle Enable -->
                        <Button Content="Toggle Enable/Disable"
                                Command="{Binding ToggleEnabledCommand}"
                                HorizontalAlignment="Stretch"
                                Padding="10,6"/>
                    </StackPanel>
                </ScrollViewer>
            </controls:TcInsetPanel>
        </Grid>
        
        <!-- Status -->
        <TextBlock Grid.Row="2" Text="{Binding StatusText}" 
                   Foreground="{DynamicResource TcMutedTextBrush}"
                   Margin="0,6"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="6">
            <Button Content="Import..." Command="{Binding ImportRulesCommand}" MinWidth="80"/>
            <Button Content="Export..." Command="{Binding ExportRulesCommand}" MinWidth="80"/>
            <Button Content="Save" Command="{Binding SaveCommand}" MinWidth="80"/>
            <Button Content="Close" Click="OnCloseClick" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>
