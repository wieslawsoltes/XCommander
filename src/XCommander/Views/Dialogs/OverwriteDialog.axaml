<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:XCommander.Controls"
             xmlns:vm="using:XCommander.ViewModels"
             mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="500"
             x:Class="XCommander.Views.Dialogs.OverwriteDialog"
             x:DataType="vm:OverwriteDialogViewModel">

    <Grid RowDefinitions="Auto,*,Auto,Auto,Auto" Margin="10">
        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="File Already Exists" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="The destination already contains a file with the same name."
                       Foreground="{DynamicResource TcMutedTextBrush}"
                       TextWrapping="Wrap"
                       Margin="0,2,0,0"/>
            <TextBlock Text="{Binding RemainingConflicts, StringFormat='{}{0} more conflicts after this one'}"
                       Foreground="Orange"
                       FontSize="11"
                       IsVisible="{Binding HasMoreConflicts}"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" ColumnDefinitions="*,8,*">
            <Border Grid.Column="0"
                    BorderBrush="{DynamicResource TcBorderMidBrush}"
                    BorderThickness="1"
                    Background="{DynamicResource TcWindowBackgroundBrush}"
                    Padding="8">
                <StackPanel Spacing="6">
                    <TextBlock Text="Source file" FontWeight="SemiBold"/>

                    <Border Height="110"
                            IsVisible="{Binding SourceIsImage}"
                            Background="#20000000"
                            ClipToBounds="True">
                        <Image Source="{Binding SourceImagePath}" Stretch="Uniform"/>
                    </Border>
                    <TextBlock Text="ðŸ“„"
                               FontSize="40"
                               HorizontalAlignment="Center"
                               IsVisible="{Binding !SourceIsImage}"/>

                    <TextBlock Text="{Binding SourceFileName}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Size:" Foreground="{DynamicResource TcMutedTextBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SourceSizeFormatted}" Margin="6,0,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Modified:" Foreground="{DynamicResource TcMutedTextBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SourceModified, StringFormat='{}{0:g}'}" Margin="6,0,0,0"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Border Background="{DynamicResource TcSelectionBackgroundBrush}"
                                Padding="4,1"
                                IsVisible="{Binding SourceIsNewer}">
                            <TextBlock Text="NEWER" Foreground="{DynamicResource TcSelectionForegroundBrush}" FontSize="10"/>
                        </Border>
                        <Border Background="{DynamicResource TcHoverBackgroundBrush}"
                                Padding="4,1"
                                IsVisible="{Binding SourceIsLarger}">
                            <TextBlock Text="LARGER" FontSize="10"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="2"
                    BorderBrush="{DynamicResource TcBorderMidBrush}"
                    BorderThickness="1"
                    Background="{DynamicResource TcWindowBackgroundBrush}"
                    Padding="8">
                <StackPanel Spacing="6">
                    <TextBlock Text="Destination file" FontWeight="SemiBold"/>

                    <Border Height="110"
                            IsVisible="{Binding DestinationIsImage}"
                            Background="#20000000"
                            ClipToBounds="True">
                        <Image Source="{Binding DestinationImagePath}" Stretch="Uniform"/>
                    </Border>
                    <TextBlock Text="ðŸ“„"
                               FontSize="40"
                               HorizontalAlignment="Center"
                               IsVisible="{Binding !DestinationIsImage}"/>

                    <TextBlock Text="{Binding DestinationFileName}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Size:" Foreground="{DynamicResource TcMutedTextBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DestinationSizeFormatted}" Margin="6,0,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Modified:" Foreground="{DynamicResource TcMutedTextBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DestinationModified, StringFormat='{}{0:g}'}" Margin="6,0,0,0"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Border Background="{DynamicResource TcSelectionBackgroundBrush}"
                                Padding="4,1"
                                IsVisible="{Binding !SourceIsNewer}">
                            <TextBlock Text="NEWER" Foreground="{DynamicResource TcSelectionForegroundBrush}" FontSize="10"/>
                        </Border>
                        <Border Background="{DynamicResource TcHoverBackgroundBrush}"
                                Padding="4,1"
                                IsVisible="{Binding !SourceIsLarger}">
                            <TextBlock Text="LARGER" FontSize="10"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <controls:TcBevelPanel Grid.Row="2" Padding="6,4" Margin="0,8,0,0">
            <StackPanel Spacing="2">
                <TextBlock Text="{Binding SizeComparison}"/>
                <TextBlock Text="{Binding DateComparison}"/>
            </StackPanel>
        </controls:TcBevelPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="6" Margin="0,6,0,0">
            <TextBlock Text="New name:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding NewFileName}" Width="300"/>
        </StackPanel>

        <Grid Grid.Row="4" Margin="0,8,0,0" ColumnDefinitions="*,*,*,*,*">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Content="Overwrite" Command="{Binding OverwriteCommand}" MinWidth="90"/>
            <Button Grid.Row="0" Grid.Column="1" Content="Overwrite All" Command="{Binding OverwriteAllCommand}" MinWidth="90"/>
            <Button Grid.Row="0" Grid.Column="2" Content="Skip" Command="{Binding SkipCommand}" MinWidth="90"/>
            <Button Grid.Row="0" Grid.Column="3" Content="Skip All" Command="{Binding SkipAllCommand}" MinWidth="90"/>
            <Button Grid.Row="0" Grid.Column="4" Content="If Older" Command="{Binding OverwriteOlderCommand}" MinWidth="90"/>

            <Button Grid.Row="2" Grid.Column="0" Content="Rename" Command="{Binding RenameCommand}" MinWidth="90"/>
            <Button Grid.Row="2" Grid.Column="1" Content="Rename All" Command="{Binding RenameAllCommand}" MinWidth="90"/>
            <Button Grid.Row="2" Grid.Column="2" Content="Compare" Command="{Binding CompareCommand}" MinWidth="90"/>
            <Button Grid.Row="2" Grid.Column="4" Content="Cancel" Command="{Binding CancelCommand}" MinWidth="90" IsCancel="True"/>
        </Grid>
    </Grid>
</UserControl>
