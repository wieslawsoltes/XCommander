<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:XCommander.Controls"
        xmlns:vm="using:XCommander.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
        x:Class="XCommander.Views.Dialogs.AboutDialog"
        x:DataType="vm:AboutViewModel"
        Title="About XCommander"
        Width="500" Height="500"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False">

    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <controls:TcBevelPanel Grid.Row="0" Padding="6,4">
            <StackPanel Spacing="2">
                <TextBlock Text="{Binding ApplicationName}" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="{Binding Version, StringFormat='Version {0}'}"
                           FontSize="11"
                           Foreground="{DynamicResource TcMutedTextBrush}"/>
            </StackPanel>
        </controls:TcBevelPanel>

        <controls:TcInsetPanel Grid.Row="1" Padding="8" Margin="0,6,0,0">
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding Description}"
                           TextWrapping="Wrap"
                           FontSize="12"/>
                <TextBlock Text="Key Features:" FontWeight="SemiBold" FontSize="12"/>
                <TextBlock FontSize="11" LineHeight="18" Margin="6,0,0,0">
                    <Run Text="• Dual-panel file management"/><LineBreak/>
                    <Run Text="• Archive support (ZIP, 7z, TAR, GZ)"/><LineBreak/>
                    <Run Text="• FTP/SFTP connections"/><LineBreak/>
                    <Run Text="• Multi-rename tool"/><LineBreak/>
                    <Run Text="• File comparison and sync"/><LineBreak/>
                    <Run Text="• Configurable toolbar and columns"/><LineBreak/>
                    <Run Text="• Plugin system"/>
                </TextBlock>
            </StackPanel>
        </controls:TcInsetPanel>

        <controls:TcBevelPanel Grid.Row="2" Padding="6,4" Margin="0,6,0,0">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <StackPanel Grid.Column="0" Spacing="2">
                    <TextBlock Text="{Binding Copyright}" FontSize="11" Foreground="{DynamicResource TcMutedTextBrush}"/>
                    <TextBlock Text="{Binding SystemInfo}"
                               FontSize="10"
                               Foreground="{DynamicResource TcMutedTextBrush}"
                               FontFamily="{DynamicResource MonoFontFamily}"/>
                </StackPanel>
                <Button Grid.Column="1"
                        Content="Project"
                        Command="{Binding OpenProjectUrlCommand}"
                        Padding="10,4"
                        Margin="0,0,6,0"/>
                <Button Grid.Column="2"
                        Content="Close"
                        Click="OnCloseClick"
                        MinWidth="80"/>
            </Grid>
        </controls:TcBevelPanel>
    </Grid>
</Window>
