<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="using:XCommander.Controls"
        xmlns:vm="using:XCommander.ViewModels"
        mc:Ignorable="d"
        Width="620" Height="520"
        x:Class="XCommander.Views.Dialogs.DeleteConfirmationDialog"
        x:DataType="vm:DeleteConfirmationViewModel"
        Title="Delete Files"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        ShowInTaskbar="False">

    <Grid RowDefinitions="Auto,*,Auto,Auto,Auto" Margin="10">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Delete Files" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="Are you sure you want to delete the following items?"
                       Foreground="{DynamicResource TcMutedTextBrush}"
                       TextWrapping="Wrap"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Items List -->
        <controls:TcInsetPanel Grid.Row="1" Padding="0">
            <Grid RowDefinitions="Auto,*">
                <Border Grid.Row="0"
                        Background="{DynamicResource TcChromeBackgroundBrush}"
                        Padding="6,3">
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                        <CheckBox Grid.Column="0"
                                  IsChecked="True"
                                  ToolTip.Tip="Select/Deselect All"
                                  Margin="0,0,8,0"/>
                        <TextBlock Grid.Column="1" Text="Name" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="Size" FontWeight="SemiBold" Width="80" TextAlignment="Right"/>
                        <TextBlock Grid.Column="3" Text="Items" FontWeight="SemiBold" Width="60" TextAlignment="Right" Margin="8,0,0,0"/>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:DeleteItemInfo">
                                <Border Padding="6,3" Background="Transparent">
                                    <Border.Styles>
                                        <Style Selector="Border:pointerover">
                                            <Setter Property="Background" Value="{DynamicResource TcHoverBackgroundBrush}"/>
                                        </Style>
                                    </Border.Styles>
                                    <Grid ColumnDefinitions="Auto,Auto,*,Auto,Auto">
                                        <CheckBox Grid.Column="0"
                                                  IsChecked="{Binding IsSelected}"
                                                  Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Icon}"
                                                   Margin="0,0,8,0"
                                                   FontSize="14"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Name}"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip.Tip="{Binding FullPath}"/>
                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding SizeFormatted}"
                                                   Width="80"
                                                   TextAlignment="Right"
                                                   Foreground="{DynamicResource TcMutedTextBrush}"/>
                                        <TextBlock Grid.Column="4"
                                                   Text="{Binding FileCount}"
                                                   Width="60"
                                                   TextAlignment="Right"
                                                   Foreground="{DynamicResource TcMutedTextBrush}"
                                                   Margin="8,0,0,0"
                                                   IsVisible="{Binding IsDirectory}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </controls:TcInsetPanel>

        <!-- Summary -->
        <controls:TcBevelPanel Grid.Row="2" Padding="6,4" Margin="0,8,0,0">
            <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                <TextBlock Grid.Column="0" Text="Files:" Margin="0,0,4,0"/>
                <TextBlock Grid.Column="1" Text="{Binding TotalFileCount}" Margin="0,0,12,0"/>
                <TextBlock Grid.Column="2" Text="Folders:" Margin="0,0,4,0"/>
                <TextBlock Grid.Column="3" Text="{Binding TotalFolderCount}" Margin="0,0,12,0"/>
                <TextBlock Grid.Column="4" Text="Size:" Margin="0,0,4,0"/>
                <TextBlock Grid.Column="5" Text="{Binding TotalSizeFormatted}" FontWeight="SemiBold"/>
            </Grid>
        </controls:TcBevelPanel>

        <!-- Warning Message -->
        <TextBlock Grid.Row="3"
                   Text="{Binding WarningMessage}"
                   Foreground="Orange"
                   FontSize="11"
                   Margin="0,6,0,0"
                   IsVisible="{Binding WarningMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

        <!-- Delete Mode + Buttons -->
        <Grid Grid.Row="4" ColumnDefinitions="*,Auto" Margin="0,8,0,0">
            <Border Grid.Column="0"
                    BorderBrush="{DynamicResource TcBorderMidBrush}"
                    BorderThickness="1"
                    Background="{DynamicResource TcWindowBackgroundBrush}"
                    Padding="8">
                <StackPanel Spacing="6">
                    <TextBlock Text="Delete Mode" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <RadioButton Content="Recycle Bin"
                                     IsChecked="{Binding IsRecycleBinMode}"
                                     Command="{Binding SetRecycleBinModeCommand}"
                                     GroupName="DeleteMode"
                                     ToolTip.Tip="Move to Recycle Bin (recoverable)"/>
                        <RadioButton Content="Permanent"
                                     IsChecked="{Binding IsPermanentMode}"
                                     Command="{Binding SetPermanentModeCommand}"
                                     GroupName="DeleteMode"
                                     ToolTip.Tip="Delete permanently (not recoverable)"/>
                        <RadioButton Content="Secure Delete"
                                     IsChecked="{Binding IsSecureDeleteMode}"
                                     Command="{Binding SetSecureDeleteModeCommand}"
                                     GroupName="DeleteMode"
                                     ToolTip.Tip="Overwrite data before deletion (slower)"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,6,0,0">
                        <CheckBox Content="Delete read-only files"
                                  IsChecked="{Binding DeleteReadOnly}"
                                  IsVisible="{Binding HasReadOnlyFiles}"/>
                        <CheckBox Content="Include hidden files"
                                  IsChecked="{Binding DeleteHidden}"
                                  IsVisible="{Binding HasHiddenFiles}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,0,6,0">
                    <Button Content="Select All" Command="{Binding SelectAllCommand}" Width="90"/>
                    <Button Content="None" Command="{Binding DeselectAllCommand}" Width="70"/>
                    <Button Content="Invert" Command="{Binding InvertSelectionCommand}" Width="70"/>
                </StackPanel>
                <Button Content="Delete"
                        Command="{Binding DeleteCommand}"
                        IsDefault="True"
                        MinWidth="80"/>
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        IsCancel="True"
                        MinWidth="80"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
