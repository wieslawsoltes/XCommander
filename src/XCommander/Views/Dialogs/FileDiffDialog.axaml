<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:XCommander.Controls"
             xmlns:vm="using:XCommander.ViewModels"
             xmlns:conv="using:XCommander.Converters"
             xmlns:diff="clr-namespace:DiffPlex.DiffBuilder.Model;assembly=DiffPlex"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="XCommander.Views.Dialogs.FileDiffDialog"
             x:DataType="vm:FileDiffViewModel">

    <UserControl.Resources>
        <DataTemplate x:Key="DiffLineActionTemplate"
                      x:DataType="vm:DiffLineViewModel">
            <StackPanel Orientation="Horizontal" Spacing="2" HorizontalAlignment="Center">
                <Button Content="←" Padding="4,2"
                        Command="{Binding $parent[DataGrid].((vm:FileDiffViewModel)DataContext).CopyLineToLeftCommand}"
                        CommandParameter="{Binding}"
                        IsVisible="{Binding HasConflict}"/>
                <TextBlock Text="{Binding ChangeIcon}" VerticalAlignment="Center" FontWeight="Bold" Margin="4,0"/>
                <Button Content="→" Padding="4,2"
                        Command="{Binding $parent[DataGrid].((vm:FileDiffViewModel)DataContext).CopyLineToRightCommand}"
                        CommandParameter="{Binding}"
                        IsVisible="{Binding HasConflict}"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="InlineDiffTypeTemplate"
                      x:DataType="diff:DiffPiece">
            <TextBlock Text="{Binding Type, Converter={x:Static conv:ChangeTypeToIconConverter.Instance}}"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" Margin="10">
        <controls:TcBevelPanel Grid.Row="0" Padding="6,4">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Button Content="Swap" Command="{Binding SwapFilesCommand}" Padding="8,4"/>
                    <Button Content="Refresh" Command="{Binding RefreshCommand}" Padding="8,4"/>
                    <TextBlock Text="|" VerticalAlignment="Center" Foreground="{DynamicResource TcMutedTextBrush}" Margin="4,0"/>
                    <ToggleButton Content="Inline View"
                                  IsChecked="{Binding DisplayMode, Converter={x:Static conv:DiffModeConverter.Instance}}"
                                  Padding="8,4"/>
                    <TextBlock Text="|" VerticalAlignment="Center" Foreground="{DynamicResource TcMutedTextBrush}" Margin="4,0"/>
                    <Button Content="All ←" Command="{Binding CopyAllToLeftCommand}" Padding="8,4"/>
                    <Button Content="All →" Command="{Binding CopyAllToRightCommand}" Padding="8,4"/>
                    <TextBlock Text="|" VerticalAlignment="Center" Foreground="{DynamicResource TcMutedTextBrush}" Margin="4,0"/>
                    <Button Content="Prev" Command="{Binding NavigateToPreviousDiffCommand}" Padding="8,4"/>
                    <Button Content="Next" Command="{Binding NavigateToNextDiffCommand}" Padding="8,4"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <CheckBox Content="Ignore whitespace" IsChecked="{Binding IgnoreWhitespace}" VerticalAlignment="Center"/>
                    <CheckBox Content="Ignore case" IsChecked="{Binding IgnoreCase}" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </controls:TcBevelPanel>

        <Grid Grid.Row="1" ColumnDefinitions="*,*"
              Background="{DynamicResource TcChromeBackgroundBrush}"
              IsVisible="{Binding DisplayMode, Converter={x:Static conv:IsSideBySideConverter.Instance}}">
            <Border Padding="6,3" BorderThickness="0,0,1,0"
                    BorderBrush="{DynamicResource TcBorderMidBrush}">
                <StackPanel>
                    <TextBlock Text="{Binding LeftFileName}" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding LeftFilePath}" FontSize="10"
                               Foreground="{DynamicResource TcMutedTextBrush}"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Padding="6,3">
                <StackPanel>
                    <TextBlock Text="{Binding RightFileName}" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding RightFilePath}" FontSize="10"
                               Foreground="{DynamicResource TcMutedTextBrush}"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="1"
                Background="{DynamicResource TcChromeBackgroundBrush}"
                Padding="6,3"
                IsVisible="{Binding DisplayMode, Converter={x:Static conv:IsInlineModeConverter.Instance}}">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <StackPanel>
                    <TextBlock Text="Left:" FontWeight="SemiBold" FontSize="11"/>
                    <TextBlock Text="{Binding LeftFileName}" FontSize="12"/>
                </StackPanel>
                <TextBlock Text="vs" VerticalAlignment="Center" Foreground="{DynamicResource TcMutedTextBrush}"/>
                <StackPanel>
                    <TextBlock Text="Right:" FontWeight="SemiBold" FontSize="11"/>
                    <TextBlock Text="{Binding RightFileName}" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ProgressBar Grid.Row="2" IsIndeterminate="True"
                     IsVisible="{Binding IsLoading}"
                     VerticalAlignment="Top" Margin="0,4,0,0"/>

        <controls:TcInsetPanel Grid.Row="2" Padding="0"
                               IsVisible="{Binding DisplayMode, Converter={x:Static conv:IsSideBySideConverter.Instance}}">
            <DataGrid ItemsSource="{Binding DiffLines}"
                      SelectedItem="{Binding SelectedDiffLine}"
                      ColumnDefinitionsSource="{Binding ColumnDefinitions}"
                      FilteringModel="{Binding FilteringModel}"
                      SortingModel="{Binding SortingModel}"
                      SearchModel="{Binding SearchModel}"
                      AutoGenerateColumns="False"
                      CanUserReorderColumns="False"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Vertical"
                      BorderThickness="0"
                      FontFamily="{DynamicResource MonoFontFamily}"
                      FontSize="12"
                      SelectionMode="Single">
                <DataGrid.FastPathOptions>
                    <DataGridFastPathOptions UseAccessorsOnly="True"
                                             ThrowOnMissingAccessor="True" />
                </DataGrid.FastPathOptions>
            </DataGrid>
        </controls:TcInsetPanel>

        <controls:TcInsetPanel Grid.Row="2" Padding="0"
                               IsVisible="{Binding DisplayMode, Converter={x:Static conv:IsInlineModeConverter.Instance}}">
            <DataGrid ItemsSource="{Binding InlineDiffLines}"
                      ColumnDefinitionsSource="{Binding InlineColumnDefinitions}"
                      FilteringModel="{Binding InlineFilteringModel}"
                      SortingModel="{Binding InlineSortingModel}"
                      SearchModel="{Binding InlineSearchModel}"
                      FontFamily="{DynamicResource MonoFontFamily}"
                      FontSize="12"
                      CanUserResizeColumns="True"
                      CanUserReorderColumns="False"
                      CanUserSortColumns="True"
                      HeadersVisibility="None"
                      GridLinesVisibility="None"
                      BorderThickness="0"
                      IsReadOnly="True">
                <DataGrid.FastPathOptions>
                    <DataGridFastPathOptions UseAccessorsOnly="True"
                                             ThrowOnMissingAccessor="True" />
                </DataGrid.FastPathOptions>
            </DataGrid>
        </controls:TcInsetPanel>

        <controls:TcBevelPanel Grid.Row="3" Padding="6,4" Margin="0,6,0,0">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" Margin="12,0">
                    <TextBlock VerticalAlignment="Center">
                        <Run Text="+" Foreground="Green" FontWeight="Bold"/>
                        <Run Text="{Binding AddedLines}"/>
                        <Run Text=" added"/>
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center">
                        <Run Text="-" Foreground="Red" FontWeight="Bold"/>
                        <Run Text="{Binding DeletedLines}"/>
                        <Run Text=" deleted"/>
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center">
                        <Run Text="~" Foreground="Orange" FontWeight="Bold"/>
                        <Run Text="{Binding ModifiedLines}"/>
                        <Run Text=" modified"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </controls:TcBevelPanel>

        <controls:TcBevelPanel Grid.Row="4" Padding="6,4" Margin="0,6,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Button Content="Save Left" Command="{Binding SaveLeftFileCommand}"
                            IsEnabled="{Binding HasUnsavedChanges}" Padding="10,4"/>
                    <Button Content="Save Right" Command="{Binding SaveRightFileCommand}"
                            IsEnabled="{Binding HasUnsavedChanges}" Padding="10,4"/>
                    <Button Content="Save As..." Command="{Binding SaveMergedFileAsCommand}" Padding="10,4"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="6">
                    <TextBlock Text="*" Foreground="Orange" VerticalAlignment="Center"
                               IsVisible="{Binding HasUnsavedChanges}"/>
                    <Button Content="Close" Command="{Binding CloseCommand}" Padding="10,4"/>
                </StackPanel>
            </Grid>
        </controls:TcBevelPanel>
    </Grid>
</UserControl>
