<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:XCommander.ViewModels"
             xmlns:conv="using:XCommander.Converters"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="XCommander.Views.Dialogs.FileDiffDialog"
             x:DataType="vm:FileDiffViewModel">
    
    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto">
        <!-- Toolbar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                Padding="8">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="â‡„ Swap" Command="{Binding SwapFilesCommand}"
                            ToolTip.Tip="Swap left and right files" Padding="12,6"/>
                    <Button Content="âŸ³ Refresh" Command="{Binding RefreshCommand}"
                            ToolTip.Tip="Recompute diff" Padding="12,6"/>
                    <Separator Margin="4,0"/>
                    <ToggleButton Content="Inline View" 
                                  IsChecked="{Binding DisplayMode, Converter={x:Static conv:DiffModeConverter.Instance}}"
                                  Padding="12,6"
                                  ToolTip.Tip="Toggle between side-by-side and inline view"/>
                    <Separator Margin="4,0"/>
                    <!-- Merge controls -->
                    <Button Content="â† All" Command="{Binding CopyAllToLeftCommand}"
                            ToolTip.Tip="Copy all changes from right to left" Padding="12,6"/>
                    <Button Content="All â†’" Command="{Binding CopyAllToRightCommand}"
                            ToolTip.Tip="Copy all changes from left to right" Padding="12,6"/>
                    <Separator Margin="4,0"/>
                    <Button Content="â†‘ Prev" Command="{Binding NavigateToPreviousDiffCommand}"
                            ToolTip.Tip="Navigate to previous difference" Padding="12,6"/>
                    <Button Content="â†“ Next" Command="{Binding NavigateToNextDiffCommand}"
                            ToolTip.Tip="Navigate to next difference" Padding="12,6"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <CheckBox Content="Ignore whitespace" IsChecked="{Binding IgnoreWhitespace}"
                              VerticalAlignment="Center"/>
                    <CheckBox Content="Ignore case" IsChecked="{Binding IgnoreCase}"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- File Names Header -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*" 
              Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
              IsVisible="{Binding DisplayMode, Converter={x:Static conv:IsSideBySideConverter.Instance}}">
            <Border Padding="8,4" BorderThickness="0,0,1,0"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                <StackPanel>
                    <TextBlock Text="{Binding LeftFileName}" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding LeftFilePath}" FontSize="10"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Padding="8,4">
                <StackPanel>
                    <TextBlock Text="{Binding RightFileName}" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding RightFilePath}" FontSize="10"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Single header for inline mode -->
        <Border Grid.Row="1"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="8,4"
                IsVisible="{Binding DisplayMode, Converter={x:Static conv:IsInlineModeConverter.Instance}}">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <StackPanel>
                    <TextBlock Text="Left:" FontWeight="SemiBold" FontSize="11"/>
                    <TextBlock Text="{Binding LeftFileName}" FontSize="12"/>
                </StackPanel>
                <TextBlock Text="vs" VerticalAlignment="Center" 
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                <StackPanel>
                    <TextBlock Text="Right:" FontWeight="SemiBold" FontSize="11"/>
                    <TextBlock Text="{Binding RightFileName}" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Loading indicator -->
        <ProgressBar Grid.Row="2" IsIndeterminate="True" 
                     IsVisible="{Binding IsLoading}" 
                     VerticalAlignment="Top" Margin="0,4,0,0"/>
        
        <!-- Side-by-side diff view -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding DiffLines}"
                  SelectedItem="{Binding SelectedDiffLine}"
                  IsVisible="{Binding DisplayMode, Converter={x:Static conv:IsSideBySideConverter.Instance}}"
                  AutoGenerateColumns="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Vertical"
                  BorderThickness="0"
                  FontFamily="Consolas,Menlo,monospace"
                  FontSize="12"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Width="50"
                                    Binding="{Binding LeftLineNumber}"/>
                <DataGridTextColumn Header="Left" Width="*"
                                    Binding="{Binding LeftText}"/>
                <DataGridTemplateColumn Header="" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="vm:DiffLineViewModel">
                            <StackPanel Orientation="Horizontal" Spacing="2" HorizontalAlignment="Center">
                                <Button Content="â†" Padding="4,2"
                                        Command="{Binding $parent[DataGrid].((vm:FileDiffViewModel)DataContext).CopyLineToLeftCommand}"
                                        CommandParameter="{Binding}"
                                        IsVisible="{Binding HasConflict}"
                                        ToolTip.Tip="Copy right to left"/>
                                <TextBlock Text="{Binding ChangeIcon}" 
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Margin="4,0"/>
                                <Button Content="â†’" Padding="4,2"
                                        Command="{Binding $parent[DataGrid].((vm:FileDiffViewModel)DataContext).CopyLineToRightCommand}"
                                        CommandParameter="{Binding}"
                                        IsVisible="{Binding HasConflict}"
                                        ToolTip.Tip="Copy left to right"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="#" Width="50"
                                    Binding="{Binding RightLineNumber}"/>
                <DataGridTextColumn Header="Right" Width="*"
                                    Binding="{Binding RightText}"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Inline diff view -->
        <ListBox Grid.Row="2"
                 ItemsSource="{Binding InlineDiffLines}"
                 IsVisible="{Binding DisplayMode, Converter={x:Static conv:IsInlineModeConverter.Instance}}"
                 FontFamily="Consolas,Menlo,monospace"
                 FontSize="12">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="30,50,*">
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding Type, Converter={x:Static conv:ChangeTypeToIconConverter.Instance}}"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Position}"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock Grid.Column="2" Text="{Binding Text}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!-- Stats Bar -->
        <Border Grid.Row="3" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                Padding="8,4">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16" Margin="16,0">
                    <TextBlock VerticalAlignment="Center">
                        <Run Text="+" Foreground="Green" FontWeight="Bold"/>
                        <Run Text="{Binding AddedLines}"/>
                        <Run Text=" added"/>
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center">
                        <Run Text="-" Foreground="Red" FontWeight="Bold"/>
                        <Run Text="{Binding DeletedLines}"/>
                        <Run Text=" deleted"/>
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center">
                        <Run Text="~" Foreground="Orange" FontWeight="Bold"/>
                        <Run Text="{Binding ModifiedLines}"/>
                        <Run Text=" modified"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Buttons -->
        <Border Grid.Row="4" Padding="8">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="ðŸ’¾ Save Left" Command="{Binding SaveLeftFileCommand}" 
                            Padding="16,8"
                            IsEnabled="{Binding HasUnsavedChanges}"
                            ToolTip.Tip="Save merged result to left file"/>
                    <Button Content="ðŸ’¾ Save Right" Command="{Binding SaveRightFileCommand}" 
                            Padding="16,8"
                            IsEnabled="{Binding HasUnsavedChanges}"
                            ToolTip.Tip="Save merged result to right file"/>
                    <Button Content="ðŸ’¾ Save As..." Command="{Binding SaveMergedFileAsCommand}" 
                            Padding="16,8"
                            ToolTip.Tip="Save merged result to a new file"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                    <TextBlock Text="*" Foreground="Orange" VerticalAlignment="Center"
                               IsVisible="{Binding HasUnsavedChanges}"
                               ToolTip.Tip="Unsaved changes"/>
                    <Button Content="Close" Command="{Binding CloseCommand}" Padding="16,8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
