<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:XCommander.Controls"
             xmlns:vm="using:XCommander.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
             x:Class="XCommander.Views.PluginsDialog"
             x:DataType="vm:PluginsViewModel">

    <UserControl.Resources>
        <DataTemplate x:Key="PluginItemTemplate"
                      x:DataType="vm:PluginItemViewModel">
            <Grid ColumnDefinitions="Auto,*,Auto" Margin="8,4">
                <Border Width="40" Height="40" CornerRadius="4"
                        Background="{DynamicResource SystemAccentColor}"
                        VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”Œ" FontSize="20"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding PluginType}"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               FontSize="12"/>
                </StackPanel>
                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="8,0,0,0">
                    <Border Padding="6,2" CornerRadius="10"
                            Background="{Binding IsEnabled, Converter={StaticResource BoolToStatusBrushConverter}}">
                        <TextBlock Text="{Binding Status}" FontSize="11"
                                   Foreground="White"/>
                    </Border>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="10">
        <controls:TcBevelPanel Grid.Row="0" Padding="6,4">
            <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                <StackPanel>
                    <TextBlock Text="Plugin Manager" FontSize="14" FontWeight="Bold"/>
                    <TextBlock Text="Manage installed plugins and their settings"
                               Foreground="{DynamicResource TcMutedTextBrush}"
                               Margin="0,2,0,0"/>
                </StackPanel>
                <TextBox Grid.Column="1"
                         Width="220"
                         VerticalAlignment="Center"
                         Text="{Binding SearchText}"
                         Watermark="Search plugins..."/>
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                    <Button Content="Refresh" Command="{Binding RefreshPluginsCommand}"/>
                    <Button Content="Open Plugins Folder" Command="{Binding OpenPluginsFolderCommand}"/>
                </StackPanel>
            </Grid>
        </controls:TcBevelPanel>
        
        <!-- Plugin List -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,*" Margin="0,6,0,0">
            <!-- Plugins List -->
            <controls:TcInsetPanel Padding="0">
                <DataGrid ItemsSource="{Binding Plugins}"
                          SelectedItem="{Binding SelectedPlugin}"
                          ColumnDefinitionsSource="{Binding ColumnDefinitions}"
                          FilteringModel="{Binding FilteringModel}"
                          SortingModel="{Binding SortingModel}"
                          SearchModel="{Binding SearchModel}"
                          Background="Transparent"
                          SelectionMode="Single"
                          CanUserResizeColumns="True"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="True"
                          HeadersVisibility="None"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          IsReadOnly="True">
                    <DataGrid.FastPathOptions>
                        <DataGridFastPathOptions UseAccessorsOnly="True"
                                                 ThrowOnMissingAccessor="True" />
                    </DataGrid.FastPathOptions>
                </DataGrid>
            </controls:TcInsetPanel>
            
            <GridSplitter Grid.Column="1" Width="8"/>
            
            <!-- Plugin Details -->
            <controls:TcInsetPanel Grid.Column="2" Padding="12"
                                   IsVisible="{Binding SelectedPlugin, Converter={x:Static ObjectConverters.IsNotNull}}">
                <ScrollViewer>
                    <StackPanel Spacing="16" DataContext="{Binding SelectedPlugin}">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Id}" 
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       FontSize="12" Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap"
                                   IsVisible="{Binding Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                        
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" 
                              Margin="0,8,0,0">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" FontWeight="SemiBold" Margin="0,0,16,4"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Version}"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Author:" FontWeight="SemiBold" Margin="0,0,16,4"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Author}"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Type:" FontWeight="SemiBold" Margin="0,0,16,4"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PluginType}"/>
                        </Grid>
                        
                        <!-- Error Display -->
                        <Border Background="#FFF0F0" Padding="8"
                                IsVisible="{Binding Error, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                            <StackPanel>
                                <TextBlock Text="Error" FontWeight="SemiBold" Foreground="#CC0000"/>
                                <TextBlock Text="{Binding Error}" TextWrapping="Wrap" Foreground="#CC0000"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,16,0,0">
                            <Button Content="Enable" 
                                    Command="{Binding $parent[UserControl].((vm:PluginsViewModel)DataContext).EnablePluginCommand}"
                                    IsEnabled="{Binding !IsEnabled}"/>
                            <Button Content="Disable"
                                    Command="{Binding $parent[UserControl].((vm:PluginsViewModel)DataContext).DisablePluginCommand}"
                                    IsEnabled="{Binding IsEnabled}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </controls:TcInsetPanel>
            
            <!-- No Selection Message -->
            <controls:TcInsetPanel Grid.Column="2" Padding="12"
                                   IsVisible="{Binding SelectedPlugin, Converter={x:Static ObjectConverters.IsNull}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ”Œ" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="Select a plugin to view details" 
                               Foreground="{DynamicResource TcMutedTextBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </controls:TcInsetPanel>
        </Grid>
        
        <!-- Status Bar -->
        <controls:TcBevelPanel Grid.Row="2" Padding="6,4" Margin="0,6,0,0">
            <TextBlock Text="{Binding StatusMessage}"/>
        </controls:TcBevelPanel>
        
        <!-- Button Bar -->
        <controls:TcBevelPanel Grid.Row="3" Padding="6,4" Margin="0,6,0,0">
            <Button Content="Close" HorizontalAlignment="Right" Click="OnCloseClick"/>
        </controls:TcBevelPanel>
    </Grid>
</UserControl>
