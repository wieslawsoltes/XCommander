<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:XCommander.Controls"
             xmlns:vm="using:XCommander.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="500"
             x:Class="XCommander.Views.FileCombineDialog"
             x:DataType="vm:FileCombineViewModel">

    <UserControl.Resources>
        <DataTemplate x:Key="DetectedPartTemplate"
                      x:DataType="sys:String">
            <TextBlock Text="{Binding}" FontFamily="{DynamicResource MonoFontFamily}" FontSize="12"/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto,Auto" Margin="10">
        <StackPanel Grid.Row="0" Margin="0,0,0,6" Spacing="4">
            <TextBlock Text="First Part File (.001):" FontWeight="SemiBold"/>
            <Grid ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0" Text="{Binding FirstPartFile}"/>
                <Button Grid.Column="1" Content="..." Margin="4,0,0,0" Padding="10,4"
                        Click="BrowseSource_Click"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,6" Spacing="4">
            <TextBlock Text="Destination File:" FontWeight="SemiBold"/>
            <Grid ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0" Text="{Binding DestinationFile}"/>
                <Button Grid.Column="1" Content="..." Margin="4,0,0,0" Padding="10,4"
                        Click="BrowseDestination_Click"/>
            </Grid>
        </StackPanel>

        <controls:TcBevelPanel Grid.Row="2" Padding="6,4" Margin="0,0,0,6">
            <StackPanel Spacing="6">
                <CheckBox Content="Delete parts after successful combine"
                          IsChecked="{Binding DeletePartsAfterCombine}"/>
                <TextBlock>
                    <Run Text="Detected parts: "/>
                    <Run Text="{Binding PartCount}" FontWeight="SemiBold"/>
                    <Run Text=" | Total size: "/>
                    <Run Text="{Binding TotalSizeDisplay}" FontWeight="SemiBold"/>
                </TextBlock>
            </StackPanel>
        </controls:TcBevelPanel>

        <controls:TcInsetPanel Grid.Row="3" Padding="0" Margin="0,0,0,6">
            <Grid RowDefinitions="Auto,*">
                <Border Grid.Row="0" Background="{DynamicResource TcChromeBackgroundBrush}" Padding="6,3">
                    <TextBlock Text="Detected Parts:" FontWeight="SemiBold"/>
                </Border>
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding DetectedParts}"
                          ColumnDefinitionsSource="{Binding DetectedPartsColumnDefinitions}"
                          FilteringModel="{Binding DetectedPartsFilteringModel}"
                          SortingModel="{Binding DetectedPartsSortingModel}"
                          SearchModel="{Binding DetectedPartsSearchModel}"
                          Background="Transparent"
                          HeadersVisibility="None"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          IsReadOnly="True">
                    <DataGrid.FastPathOptions>
                        <DataGridFastPathOptions UseAccessorsOnly="True"
                                                 ThrowOnMissingAccessor="True" />
                    </DataGrid.FastPathOptions>
                </DataGrid>
            </Grid>
        </controls:TcInsetPanel>

        <controls:TcBevelPanel Grid.Row="4" Padding="6,4" Margin="0,0,0,6">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" Text="{Binding Status}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding Progress, StringFormat='{}{0:F1}%'}"
                           VerticalAlignment="Center" FontWeight="SemiBold"/>
            </Grid>
        </controls:TcBevelPanel>

        <Grid Grid.Row="5" ColumnDefinitions="*,Auto,Auto,Auto">
            <ProgressBar Grid.Column="0" Value="{Binding Progress}" Maximum="100"
                         Height="8" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <Button Grid.Column="1" Content="Combine" Command="{Binding CombineFilesCommand}"
                    IsEnabled="{Binding !IsProcessing}" MinWidth="80" Margin="0,0,6,0"/>
            <Button Grid.Column="2" Content="Cancel" Command="{Binding CancelCommand}"
                    IsEnabled="{Binding IsProcessing}" MinWidth="80" Margin="0,0,6,0"/>
            <Button Grid.Column="3" Content="Close" Click="Close_Click" MinWidth="80"/>
        </Grid>
    </Grid>
</UserControl>
