    <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="RecognizesAccessKey" Value="True" />
    </Style>
    <Style Selector="^:pointerover /template/ Border#PART_Background">
      <Setter Property="Background" Value="{DynamicResource TcHoverBackgroundBrush}" />
    </Style>
    <Style Selector="^:pressed /template/ Border#PART_Background">
      <Setter Property="Background" Value="{DynamicResource TcPressedBackgroundBrush}" />
    </Style>
    <Style Selector="^:pressed /template/ Border#PART_Highlight">
      <Setter Property="BorderBrush" Value="{DynamicResource TcBorderDarkBrush}" />
    </Style>
    <Style Selector="^:pressed /template/ Border#PART_Shadow">
      <Setter Property="BorderBrush" Value="{DynamicResource TcBorderLightBrush}" />
    </Style>
    <Style Selector="^:pressed /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Margin" Value="1,1,0,0" />
    </Style>
    <Style Selector="^:checked /template/ Border#PART_Background">
      <Setter Property="Background" Value="{DynamicResource TcSelectionBackgroundBrush}" />
    </Style>
    <Style Selector="^:checked /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="TextElement.Foreground" Value="{DynamicResource TcSelectionForegroundBrush}" />
    </Style>
    <Style Selector="^:disabled">
      <Setter Property="Foreground" Value="{DynamicResource TcDisabledTextBrush}" />
    </Style>
  </ControlTheme>

  <!-- Horizontal scroll viewer with menu-style scrollers (left/right) -->
  <ControlTheme x:Key="TcHorizontalMenuScrollViewer"
                TargetType="ScrollViewer">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Template">
      <ControlTemplate>
        <DockPanel>
          <RepeatButton Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding LineLeft, RelativeSource={RelativeSource TemplatedParent}}"
                        DockPanel.Dock="Left"
                        Padding="4,0">
            <RepeatButton.IsVisible>
              <MultiBinding Converter="{x:Static converters:MenuScrollingVisibilityConverter.Instance}"
                            ConverterParameter="0">
                <Binding Path="HorizontalScrollBarVisibility"
                         RelativeSource="{RelativeSource TemplatedParent}" />
                <Binding Path="Offset.X"
                         RelativeSource="{RelativeSource TemplatedParent}" />
                <Binding Path="Extent.Width"
                         RelativeSource="{RelativeSource TemplatedParent}" />
                <Binding Path="Viewport.Width"
                         RelativeSource="{RelativeSource TemplatedParent}" />
              </MultiBinding>
            </RepeatButton.IsVisible>
            <Path Data="M 4 0 L 0 4 L 4 8 Z" />
          </RepeatButton>
          <RepeatButton Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding LineRight, RelativeSource={RelativeSource TemplatedParent}}"
                        DockPanel.Dock="Right"
                        Padding="4,0">
            <RepeatButton.IsVisible>
              <MultiBinding Converter="{x:Static converters:MenuScrollingVisibilityConverter.Instance}"
                            ConverterParameter="100">
                <Binding Path="HorizontalScrollBarVisibility"
                         RelativeSource="{RelativeSource TemplatedParent}" />
                <Binding Path="Offset.X"
                         RelativeSource="{RelativeSource TemplatedParent}" />
                <Binding Path="Extent.Width"
                         RelativeSource="{RelativeSource TemplatedParent}" />
                <Binding Path="Viewport.Width"
                         RelativeSource="{RelativeSource TemplatedParent}" />
              </MultiBinding>
            </RepeatButton.IsVisible>
            <Path Data="M 0 0 L 4 4 L 0 8 Z" />
          </RepeatButton>
          <ScrollContentPresenter Name="PART_ContentPresenter"
                                  Margin="{TemplateBinding Padding}" />
        </DockPanel>
      </ControlTemplate>
    </Setter>

    <Style Selector="^ /template/ RepeatButton > Path">
      <Setter Property="Fill" Value="{DynamicResource TcBorderDarkBrush}" />
    </Style>
    <Style Selector="^ /template/ RepeatButton:pointerover > Path">
      <Setter Property="Fill" Value="{DynamicResource TcSelectionBackgroundBrush}" />
    </Style>
  </ControlTheme>

    </ResourceDictionary>
