  <!-- Typography and spacing -->
  <FontFamily x:Key="ContentControlThemeFontFamily">Segoe UI, Tahoma, Verdana, sans-serif</FontFamily>
  <FontFamily x:Key="MonoFontFamily">Consolas, Menlo, Monaco, monospace</FontFamily>
  <sys:Double x:Key="ControlContentThemeFontSize">12</sys:Double>
  <Thickness x:Key="TextControlThemePadding">6,3,6,3</Thickness>
  <sys:Double x:Key="TextControlThemeMinHeight">22</sys:Double>
  <Thickness x:Key="ButtonPadding">6,3,6,3</Thickness>
  <CornerRadius x:Key="ControlCornerRadius">0</CornerRadius>
  <CornerRadius x:Key="OverlayCornerRadius">0</CornerRadius>

  <!-- Bevel tokens -->
  <Thickness x:Key="TcBevelHighlightThickness">1,1,0,0</Thickness>
  <Thickness x:Key="TcBevelShadowThickness">0,0,1,1</Thickness>
  <Thickness x:Key="TcBevelInnerMargin">1</Thickness>

  <!-- Beveled container -->
  <ControlTheme x:Key="{x:Type controls:TcBevelPanel}"
                TargetType="controls:TcBevelPanel">
    <Setter Property="Background" Value="{DynamicResource TcChromeBackgroundBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource TcBorderMidBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="HighlightBrush" Value="{DynamicResource TcBorderLightBrush}" />
    <Setter Property="ShadowBrush" Value="{DynamicResource TcBorderDarkBrush}" />
    <Setter Property="Padding" Value="4,2" />
    <Setter Property="Template">
      <ControlTemplate>
        <Grid>
          <Border Name="PART_Highlight"
                  BorderBrush="{TemplateBinding HighlightBrush}"
                  BorderThickness="{DynamicResource TcBevelHighlightThickness}" />
          <Border Name="PART_Shadow"
                  BorderBrush="{TemplateBinding ShadowBrush}"
                  BorderThickness="{DynamicResource TcBevelShadowThickness}" />
          <Border Name="PART_Background"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Margin="{DynamicResource TcBevelInnerMargin}">
            <ContentPresenter
              Name="PART_ContentPresenter"
              Padding="{TemplateBinding Padding}"
              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
              Content="{TemplateBinding Content}"
              ContentTemplate="{TemplateBinding ContentTemplate}" />
          </Border>
        </Grid>
      </ControlTemplate>
    </Setter>
  </ControlTheme>

  <!-- Inset (sunken) container -->
  <ControlTheme x:Key="{x:Type controls:TcInsetPanel}"
                TargetType="controls:TcInsetPanel">
    <Setter Property="Background" Value="{DynamicResource TcPanelBackgroundBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource TcBorderDarkBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="HighlightBrush" Value="{DynamicResource TcBorderDarkBrush}" />
    <Setter Property="ShadowBrush" Value="{DynamicResource TcBorderLightBrush}" />
    <Setter Property="Padding" Value="2" />
    <Setter Property="Template">
      <ControlTemplate>
        <Grid>
          <Border Name="PART_Shadow"
                  BorderBrush="{TemplateBinding HighlightBrush}"
                  BorderThickness="{DynamicResource TcBevelHighlightThickness}" />
          <Border Name="PART_Highlight"
                  BorderBrush="{TemplateBinding ShadowBrush}"
                  BorderThickness="{DynamicResource TcBevelShadowThickness}" />
          <Border Name="PART_Background"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Margin="{DynamicResource TcBevelInnerMargin}">
            <ContentPresenter
              Name="PART_ContentPresenter"
              Padding="{TemplateBinding Padding}"
              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
              Content="{TemplateBinding Content}"
              ContentTemplate="{TemplateBinding ContentTemplate}" />
          </Border>
        </Grid>
      </ControlTemplate>
    </Setter>
  </ControlTheme>

  <!-- Button theme (classic bevel) -->
  <ControlTheme x:Key="{x:Type Button}" TargetType="Button">
    <Setter Property="Background" Value="{DynamicResource TcChromeBackgroundBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource TcBorderMidBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Foreground" Value="{DynamicResource TcTextBrush}" />
    <Setter Property="Padding" Value="{DynamicResource ButtonPadding}" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="CornerRadius" Value="0" />
    <Setter Property="Template">
      <ControlTemplate>
        <Grid>
          <Border Name="PART_Highlight"
                  BorderBrush="{DynamicResource TcBorderLightBrush}"
                  BorderThickness="{DynamicResource TcBevelHighlightThickness}" />
          <Border Name="PART_Shadow"
                  BorderBrush="{DynamicResource TcBorderDarkBrush}"
                  BorderThickness="{DynamicResource TcBevelShadowThickness}" />
          <Border Name="PART_Background"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Margin="{DynamicResource TcBevelInnerMargin}">
            <ContentPresenter Name="PART_ContentPresenter"
                              Padding="{TemplateBinding Padding}"
                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                              Content="{TemplateBinding Content}"
                              ContentTemplate="{TemplateBinding ContentTemplate}"
                              TextElement.Foreground="{TemplateBinding Foreground}" />
          </Border>
        </Grid>
      </ControlTemplate>
    </Setter>

    <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="RecognizesAccessKey" Value="True" />
    </Style>
    <Style Selector="^:pointerover /template/ Border#PART_Background">
      <Setter Property="Background" Value="{DynamicResource TcHoverBackgroundBrush}" />
    </Style>
    <Style Selector="^:pressed /template/ Border#PART_Background">
      <Setter Property="Background" Value="{DynamicResource TcPressedBackgroundBrush}" />
    </Style>
    <Style Selector="^:pressed /template/ Border#PART_Highlight">
      <Setter Property="BorderBrush" Value="{DynamicResource TcBorderDarkBrush}" />
    </Style>
    <Style Selector="^:pressed /template/ Border#PART_Shadow">
      <Setter Property="BorderBrush" Value="{DynamicResource TcBorderLightBrush}" />
    </Style>
    <Style Selector="^:pressed /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Margin" Value="1,1,0,0" />
    </Style>
    <Style Selector="^:disabled">
      <Setter Property="Foreground" Value="{DynamicResource TcDisabledTextBrush}" />
    </Style>
  </ControlTheme>

